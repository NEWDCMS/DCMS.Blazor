@page "/wallet/transfer"
@inject Microsoft.Extensions.Localization.IStringLocalizer<WalletTransfer> _localizer
@inject IDialogService DialogService

@*<MudBreadcrumbs Items="_items"></MudBreadcrumbs>*@

<MudCard Elevation="25" Class="rounded-lg mt-5">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Transfer To</MudText>
                <MudText Typo="Typo.body2">Please select your payment method. This page is a dummy template.  </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudSelect T="string" Label="Banks" Strict="true" Variant="Variant.Outlined" Margin="Margin.Dense" Format="F2" OffsetY="true">
                    <MudSelectItem Value="@("MB")" />
                    <MudSelectItem Value="@("Maritime")" />
                    <MudSelectItem Value="@("Victoria")" />
                    <MudSelectItem Value="@("BigBank")" />
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="AccHolderName" Label="AccHolder Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="AccNumber" Label="Account Number" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="Amount" Label="Amount" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="Description" Label="Description" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>

            <MudItem xs="12">
                <MudContainer Fixed="true" Class="px-0">
                    <MudButton FullWidth="true" Class="rounded-lg" Variant="Variant.Filled" Style="@($" color:{Colors.Shades.White}; background:{Theme.Palette.SuccessDarken};")">Transfer Now</MudButton>
                </MudContainer>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

<MudCard Elevation="25" Class="rounded-lg mt-5">
    <MudCardContent>
        <MudGrid Class="mb-3">
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Recent Transactions</MudText>
                <MudText Typo="Typo.body1">Your recents transaction information </MudText>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToTransactionDetail())">
                    <MudIconButton Icon="fas fa-exchange-alt" Color="Color.Info" Class="mr-3 pa-2 rounded-lg" Variant="Variant.Outlined" Size="Size.Large"></MudIconButton>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Default">Saving Account</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">via Visa Card ****6789</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Style="font-weight: 600; text-align: right;" Color="@Color.Error">$4,129</MudText>
                        <MudText Typo="Typo.body2" Style="text-align: right;" Color="@Color.Default">9th Oct</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider Class="mb-1"></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToTransactionDetail())">
                    <MudIconButton Icon="fas fa-arrow-down" Color="Color.Error" Class="mr-3 pa-2 rounded-lg" Variant="Variant.Outlined" Size="Size.Large"></MudIconButton>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Default">Envato Income</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">Received via Payoneer</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Style="font-weight: 600; text-align: right;" Color="@Color.Warning">$2,220</MudText>
                        <MudText Typo="Typo.body2" Style="text-align: right;" Color="@Color.Default">3rd Oct</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider Class="mb-1"></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToTransactionDetail())">
                    <MudIconButton Icon="fab fa-spotify" Color="Color.Success" Class="mr-3 pa-2 rounded-lg" Variant="Variant.Outlined" Size="Size.Large"></MudIconButton>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Default">Spotify Premium</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">Send via Visa Direct</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Style="font-weight: 600; text-align: right;" Color="@Color.Info">$2,220</MudText>
                        <MudText Typo="Typo.body2" Style="text-align: right;" Color="@Color.Default">3rd Oct</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudDivider Class="mb-1"></MudDivider>
            </MudItem>

            <MudItem xs="12" sm="12" md="12">
                <MudPaper Elevation="0" Class="d-flex pa-0" @onclick="@(() => NavigateToTransactionDetail())">
                    <MudIconButton Icon="fab fa-apple" Color="Color.Warning" Class="mr-3 pa-2 rounded-lg" Variant="Variant.Outlined" Size="Size.Large"></MudIconButton>
                    <MudPaper Elevation="0" Class="pa-0 mr-2 align-self-center">
                        <MudText Typo="Typo.subtitle1" Class="mb-n1" Style="font-weight: 500;" Color="@Color.Default">Apple Storage</MudText>
                        <MudText Typo="Typo.body2" Color="@Color.Default">Send via Visa Direct</MudText>
                    </MudPaper>
                    <MudPaper Elevation="0" Class="pa-0 mr-0 ml-auto align-self-center">
                        <MudText Typo="Typo.h6" Class="mb-n1" Style="font-weight: 600; text-align: right;" Color="@Color.Success">$199</MudText>
                        <MudText Typo="Typo.body2" Style="text-align: right;" Color="@Color.Default">1st Oct</MudText>
                    </MudPaper>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>