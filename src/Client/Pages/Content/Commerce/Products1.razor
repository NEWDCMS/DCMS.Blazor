            <MudCardMedia Image="/images/pictures/4.jpg" Height="100" />
            <MudCardContent Class="pb-0" Style="width: 200px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">DCMS.Blazor App</MudText>
