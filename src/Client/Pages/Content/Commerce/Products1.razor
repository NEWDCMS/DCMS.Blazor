@page "/products-1"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Products1> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 py-10 mud-theme-primary" Style="border-radius: 0px 0px 45px 45px;" Outlined="false">
        <MudPaper Elevation="25" Class="d-flex flex-row pa-3 rounded-xl">
            <MudCardMedia Image="/images/delivery_icon.png" Style="height: 50px; width: 50px;" />
            <div class="ml-3">
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">Deliver to ></MudText>
                <MudText Typo="Typo.body1">123, Poseidon, CA 78000, LA...</MudText>
            </div>
        </MudPaper>
    </MudPaper>

    <MudPaper Class="mt-n7 my-3">
        <MudSelect T="Menu" @bind-Value="@menu" Class="my-0" Label="Choose your taste" Variant="Variant.Filled" ToStringFunc="@converter" OffsetY="true">
            <MudSelectItem Value="@(new Menu() { Name="DCMS.Blazor PWA App"})" />
            <MudSelectItem Value="@(new Menu() { Name="Blazor Hero Kit"})" />
            <MudSelectItem Value="@(new Menu() { Name="MAUI and Xamarin Components"})" />
            <MudSelectItem Value="@(new Menu() { Name="Sticky Mobile App"})" />
        </MudSelect>
    </MudPaper>

    @if (menu == null)
    {
        <MudText Class="mt-5 mb-3">Nothing selected yet...</MudText>
    }
    else
    {
        <MudText Color="Color.Primary" Class="mt-5 mb-3" Typo="Typo.subtitle1">@menu.Name</MudText>
    }

    <!-- Select menu item -->
    <MudGrid Class="mb-5" Spacing="1">
        @foreach (var item in _productItemListSelected)
        {
        <MudItem xs="6">
            <MudCard Elevation="25" Class="rounded-xl py-0" @onclick="@(() => NavigateToProductDetail())">
                <MudCardMedia Image="@item.Image" Height="130" />
                <MudCardContent Class="pb-0">
                    <MudText Typo="Typo.subtitle1" Color="@Color.Primary">@item.ItemName</MudText>
                    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                        <MudText Typo="Typo.body1">@item.Descriptions</MudText>
                    </MudHidden>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Outlined" Size="Size.Medium" Color="Color.Error" Class="ma-2">@item.Price</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        }
    </MudGrid>

    <!--Menu #2-->
    <MudText Color="Color.Primary" Class="mt-5 mb-3" Typo="Typo.subtitle1">My Favorites</MudText>
    <MudGrid Class="mb-5" Spacing="1">
        @foreach (var item1 in _productItemList)
        {
            <MudItem xs="6">
                <MudCard Elevation="25" Class="rounded-xl py-0" @onclick="@(() => NavigateToProductDetail())">
                    <MudCardMedia Image="@item1.Image" Height="130" />
                    <MudCardContent Class="pb-0">
                        <MudText Typo="Typo.subtitle1" Color="@Color.Primary">@item1.ItemName</MudText>
                        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                            <MudText Typo="Typo.body1">@item1.Descriptions</MudText>
                        </MudHidden>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Outlined" Size="Size.Medium" Color="Color.Error" Class="ma-2">@item1.Price</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>

    <!--Recent orders-->
    <MudText Color="Color.Primary" Class="mt-5 mb-1" Typo="Typo.subtitle1">Your recent orders</MudText>
    <MudPaper Elevation="0" Class="hz-container px-1 py-2">
        <MudCard Elevation="25" Class="mr-3 rounded-xl">
            <MudCardMedia Image="/images/pictures/1.jpg" Height="100" />
            <MudCardContent Class="pb-0" Style="width: 200px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Sticky Mobile</MudText>
                <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                    <MudText Typo="Typo.body1">Our store guarantees the followig perks to all it's customers.</MudText>
                </MudHidden>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Secondary" Class="ma-2">Order again</MudButton>
            </MudCardActions>
        </MudCard>

        <MudCard Elevation="25" Class="mr-3 rounded-xl">
            <MudCardMedia Image="/images/pictures/2.jpg" Height="100" />
            <MudCardContent Class="pb-0" Style="width: 200px;">
                <MudText Typo="Typo.subtitle1" Color="@Color.Primary">Progressive Web App</MudText>
