@page "/pages"
@inject Microsoft.Extensions.Localization.IStringLocalizer<IndexPages> _localizer

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
<MudPaper Elevation="3" Height="150" Class="px-4 mx-n4 mt-n10 pt-10 mud-theme-primary" Style="border-radius: 0px 0px 35px 35px;" Outlined="false">
    <MudPaper Elevation="0" Class="py-6" Style="background-color: transparent">

    </MudPaper>
</MudPaper>

<MudGrid Class="mt-n15 pt-0 mb-1">
    <MudItem xs="12">
        <MudCard Elevation="25" Class="rounded-xl">
            <MudCardContent>
                <MudText Color="Color.Default" Align="Align.Left" Typo="Typo.body2" Style="font-weight: 400;">Awesome pre-built pages that are highly customizable and blazing fast to load.<br>Templates that are categorized by purpose to make it easier for you to use.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudGrid Class="mb-5" Spacing="2">
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class="rounded-xl" Style="height:170px;">
            <MudCardContent Class="d-flex flex-column px-3 py-2" Style="height:170px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.Assistant" Color="Color.Secondary" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">General</MudText>
                <MudText Typo="Typo.caption" Class="align-self-center" Color="@Color.Primary">Multi Purpose Pages</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class="rounded-xl" Style="height:170px;">
            <MudCardContent Class="d-flex flex-column px-3 py-2" Style="height:170px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.AirplaneTicket" Color="Color.Success" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Onboarding</MudText>
                <MudText Typo="Typo.caption" Class="align-self-center" Color="@Color.Primary">Walkthrough pages</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class=" rounded-xl" Style="height:170px;">
            <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:170px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.MobileFriendly" Color="Color.Warning" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">App Styles</MudText>
                <MudText Typo="Typo.caption" Class="align-self-center" Color="@Color.Primary">Mobile-first Designs</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-secondary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" sm="6" md="6">
        <MudCard Elevation="25" Class="rounded-xl" Style="height:170px;">
            <MudCardContent Class="d-flex flex-column align-self-center flex-wrap px-3 py-2" Style="height:170px;">
                <MudIconButton Icon="@Icons.Material.TwoTone.Album" Color="Color.Error" Class="pa-3 align-self-center" Size="Size.Large"></MudIconButton>
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Class="align-self-center" Color="@Color.Surface">Actions</MudText>
                <MudText Typo="Typo.caption" Class="align-self-center" Color="@Color.Primary">Menu & Actions</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Class="mt-auto align-self-center mud-text-primary" Color="@Color.Default">Tap to view </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex flex-row rounded-xl" @onclick="@(() => NavigateToEducationIndexPage())">
            <MudIconButton Icon="fas fa-graduation-cap" Color="Color.Info" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToEducationIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">E-Learning</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">9 template pages </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                <MudChip Class="px-2 align-self-center" Label="true" Size="Size.Small" Color="Color.Error">v1.1.8</MudChip>
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex flex-row rounded-xl" @onclick="@(() => NavigateToBlogIndexPage())">
            <MudIconButton Icon="@Icons.Material.TwoTone.Newspaper" Color="Color.Success" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToBlogIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Blog/ News</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">8 template pages </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                <MudChip Class="px-2 align-self-center" Label="true" Size="Size.Small" Color="Color.Default">v1.1.7</MudChip>
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex flex-row rounded-xl" @onclick="@(() => NavigateToProjectIndexPage())">
            <MudIconButton Icon="fas fa-tasks" Color="Color.Tertiary" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToProjectIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Project/ Tasks</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">8 template pages </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                <MudChip Class="px-2 align-self-center" Label="true" Size="Size.Small" Color="Color.Default">v1.0.4</MudChip>
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex flex-row rounded-xl" @onclick="@(() => NavigateToHealthIndexPage())">
            <MudIconButton Icon="fas fa-heartbeat" Color="Color.Secondary" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToHealthIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Socials Health</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">6 template pages </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                <MudChip Class="px-2 align-self-center" Label="true" Size="Size.Small" Color="Color.Default">v1.0.3</MudChip>
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex flex-row rounded-xl" @onclick="@(() => NavigateToCommerceIndexPage())">
            <MudIconButton Icon="fas fa-bag-shopping" Color="Color.Error" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToCommerceIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">E-Commerce Pages</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">10 template pages </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                @*<MudChip Class="px-2 align-self-center" Size="Size.Small" Color="Color.Error">New</MudChip>*@
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex rounded-xl" @onclick="@(() => NavigateToWalletIndexPage())">
            <MudIconButton Icon="fas fa-wallet" Color="Color.Primary" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToWalletIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">E-Wallet Pages</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-primary">10 template pages </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                @*<MudChip Class="px-2 align-self-center" Size="Size.Small" Color="Color.Error">New</MudChip>*@
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex rounded-xl" @onclick="@(() => NavigateToComponentsIndexPage())">
            <MudIconButton Icon="fas fa-box-open" Color="Color.Info" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToComponentsIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Components</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-secondary">Awesome MudBlazor Components! </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                @*<MudChip Class="px-2 ml-0 align-self-center" Size="Size.Small" Color="Color.Error">New</MudChip>*@
            </MudPaper>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="12" md="12">
        <MudCard Elevation="25" Class="py-3 d-flex rounded-xl" @onclick="@(() => NavigateToCustomComponentsIndexPage())">
            <MudIconButton Icon="fas fa-code" Color="Color.Warning" Class="ma-3 pa-3" Size="Size.Large" OnClick="NavigateToCustomComponentsIndexPage"></MudIconButton>
            <MudPaper Elevation="0" Class="pa-0 align-self-center">
                <MudText Typo="Typo.subtitle1" Style="font-weight: 500;" Color="@Color.Default">Custom Components</MudText>
                <MudText Typo="Typo.caption" Style="font-weight: 300;" Color="@Color.Primary" Class="mud-text-secondary">Build your own components! </MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="pa-0 mr-2 ml-auto align-self-center">
                <MudChip Class="px-2 ml-0 align-self-center" Label="true" Size="Size.Small" Color="Color.Secondary">Coming Soon</MudChip>
            </MudPaper>
        </MudCard>
    </MudItem>
</MudGrid>
}